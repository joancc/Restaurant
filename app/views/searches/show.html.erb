<% @categories.each do |category| %>
  <h3><%= link_to("#{category.name}", category_url(category)) %></h3>
  <ul>
    <% if @restaurant_ids.empty? %>
      <% category.restaurants.each do |restaurant| %>
        <li><%= link_to( restaurant.name, restaurant_url( restaurant )) %></li>
      <% end %>
    <% else %>
      <% category.restaurants.where( "id IN (?)", @restaurant_ids ).each do |restaurant| %>
        <li><%= link_to( restaurant.name, restaurant_url( restaurant )) %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>


