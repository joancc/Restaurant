<%= form_for(@restaurant) do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p><br>

	<p>
		<%= f.label :phone %>
		<%= f.text_field :phone %>
	</p><br>

  <% if @restaurant.new_record? %>
	 <%= f.submit 'Create', {class: "btn btn-primary"} %>
  <% else %>
    <%= f.submit 'Update', {class: "btn btn-primary"} %>
  <% end %>

<% end %>  