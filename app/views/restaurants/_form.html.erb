<%= form_for @restaurant, :html => { multipart: true, :class => 'form-horizontal', 'data-parsley-validate' => '' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, { required: true } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, { :class => 'text_field', required: true } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, { :class => 'text_field', required: true } %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, { :class => 'text_field', required: true, 'data-parsley-pattern' => "^[0-9]{10}$" } %>
    </div>
  </div>

  <div class="control-group">
    <!-- select_tag( form id and value, options_from_collection_for_select(collection, value_method, text_method, selected = nil) )-->

    <%= f.label :category_ids, "Categories" %>
    <%= f.collection_select :category_ids, Category.order(:name), :id, :name, { }, { multiple: true } %>
  </div>
  
  <div class="control-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="control-group">
    <%= f.label :menu %>
    <%= f.file_field :menu %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn' %>
  </div>
<% end %>
