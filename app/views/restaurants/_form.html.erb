<%= form_for @restaurant, :html => { multipart: true, :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, { :class => 'text_field', required: true } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, { :class => 'text_field', required: true } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, { :class => 'text_field', required: true } %>
    </div>
  </div>

  <div class="control-group">
    <!-- select_tag( form id and value, options_from_collection_for_select(source, dom tag value, visible name) )-->
    <%= select_tag("restaurant[category_ids][]", options_from_collection_for_select(Category.all, :id, :name)) %>
  </div>

  
  <div class="control-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="control-group">
    <%= f.label :menu %>
    <%= f.file_field :menu %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn' %>
  </div>
<% end %>
