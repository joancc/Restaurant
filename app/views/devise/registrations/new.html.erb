<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { 'data-parsley-validate' => '' } ) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, required: true %></div>


  <div><%= f.label :email %><br />
  <%= f.email_field :email, placeholder: "email@example.com", autofocus: true, pattern: "/^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$/", required: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
