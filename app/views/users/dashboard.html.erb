<h1>Dashboard</h1>

<ul>
  <% if @restaurants %>
    <table>
      <% if current_user.owner? %>
        <thead>
          <th>Name</th>
          <th>Stars</th>
          <th>Actions</th>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
            <tr>
              <td><%= restaurant.name %></td>
              <td><%= restaurant.starred_by.count %></td>
              <td><%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_restaurant_path(restaurant), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                restaurant_path(restaurant),
                                # remote: true,
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                :class => 'btn btn-mini btn-danger' %></td>
            </tr>
          <% end %>  
        </tbody>  
      <% else %>
        <thead>
          <th>Name</th>
          <th>Category</th>
        </thead>
        <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= link_to(restaurant.name, restaurant_path(restaurant)) %></td>
            <td><%= restaurant.categories.first.name %></td>
          </tr>
        <% end %>    
      <% end %>   
      </tbody>
    </table>
  <% end %>
</ul>