<h3>Make reservation</h3>
<%= form_for [@restaurant, @reservation], html: { class: 'form-inline' } do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name %>
    <%= f.label :email  %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :date  %>
    <%= f.text_field :date, id: 'datepicker' %>
    <%= f.label :time  %>
    <%= f.time_select :time, {  minute_step: 15, start_hour: 10, end_hour: 17 }, { id: 'timepicker' } %>
    <br>
    <%= f.submit 'Make reservation', class: "btn btn-primary" %>
<% end %>